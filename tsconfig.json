{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@/*": ["./src/*"]
		},
		"types": ["@types/node"],
		"outDir": "dist"
	},
	"lib": ["es2015"],
	"include": ["./src"]
}
